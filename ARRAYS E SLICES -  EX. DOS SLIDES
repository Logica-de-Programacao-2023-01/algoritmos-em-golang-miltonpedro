1.
package main

import "fmt"

//Crie um Array de inteiros com 5 elementos e imprima cada elemento em uma linha
//separada.

func main() {
	var numeros = [5]int{1, 2, 3, 4, 5}

	for numeros := range numeros {
		fmt.Println(numeros)
	}

}

2.
package main

import "fmt"

//Crie um Slice de strings vazio, adicione os nomes "João", "Maria" e "José" a ele e imprima o Slice.

func main() {
	var nomes = []string{"João, Maria, José"}
	fmt.Println(nomes)
}

3.
package main

import "fmt"

//Crie um Slice de inteiros com os valores 1, 2, 3, 4 e 5. Remova o terceiro elemento e
//imprima o Slice resultante.

func main() {
	var numeros = []int{1, 2, 3, 4, 5}
	numeros = append(numeros[:2], numeros[3:]...)
	fmt.Println(numeros)

}

4.
package main

import "fmt"

//Crie um Array de floats com 6 elementos e calcule a média dos valores armazenados no Array.

func main() {
	arr := [6]float64{1, 2, 3, 4, 5, 6}
	var soma float64

	for _, x := range arr {
		soma += x
	}
	media := soma / float64(len(arr))

	fmt.Println("a media é de", media)
  }
  
  5.
  package main

import "fmt"

// Crie uma matriz bidimensional de inteiros com 3 linhas e 4 colunas. Inicialize cada
// elemento com o valor da soma do índice da linha e o índice da coluna. Imprima a matriz
// resultante.
func main() {
	var matrix [3][4]int

	for linha := range matrix {
		for coluna := range matrix[linha] {
			matrix[linha][coluna] = linha + coluna
		}
	}

	fmt.Println(matrix)
}
  
  
  
  
  
  
  
